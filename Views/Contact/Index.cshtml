@using My_Portfolio_MVC.Models
@model List<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<div class="py-1">
    <h4 class="text-center my-2">İletişim</h4>

    <div class="container-fluid">

        <table class="table table-hover table-striped" style="width:100%">
            <thead class="bg-light">
                <tr class="text-dark">
                    <th class="text-center">Id</th>
                    <th class="text-center">Telefon Numarası</th>
                    <th class="text-center">Mail Adresi</th>
                    <th class="text-center">Sil</th>
                    <th class="text-center">Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.ContactId</td>
                        <td class="text-center">@item.Phone</td>
                        <td class="text-center">@item.Email</td>
                        <td class="text-center"><a href="/Contact/Delete/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>

                        <td class="text-center"><a href="/Contact/Update/@item.ContactId" class="btn btn-outline-success">Güncelle</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Contact/Create" class="btn btn-success my-4 text-center"> Yeni iletişim Ekle </a>
</div>

