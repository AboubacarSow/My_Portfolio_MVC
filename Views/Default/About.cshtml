@model My_Portfolio_MVC.Models.About


<section id="about" class="s-about target-section">

   
      

    <div class="row about-info wide" data-animate-block>

        <div class="column lg-6  md-12 about-info__pic-block" style="height:470px; padding-left:50px">
            <img src="@Model.ImageUrl"
                 srcset="@Model.ImageUrl 1x, @Model.ImageUrl 2x" alt="" 
                 class="about-info__pic" data-animate-el
                 style="border-radius:50%; height:100%; width:470px;">
        </div>

        <div class="column lg-6  md-12" style="">
            <div class="about-info__text">

                <h2 class="text-pretitle with-line" data-animate-el>
                    @Model.Title
                </h2>
                <p class="attention-getter" data-animate-el>
                    @Model.Description
                </p>
                <a href="@Model.CvUrl" download class="btn btn--medium u-fullwidth" data-animate-el 
                   style="border-radius:5px">CV'mi indir</a>

            </div>
        </div>
    </div>
 

    <!-- about-info -->

    @Html.Action("Expertise")
    <!-- end about-expertise -->


    <div class="row about-timelines" data-animate-block>
        @Html.Action("Experience")
        <!-- end column -->

        @Html.Action("Education")

    </div> <!-- end about-timelines -->

</section>
