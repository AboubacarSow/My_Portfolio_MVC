@model My_Portfolio_MVC.Models.Message
@{ 
    Layout = null;
}
<style>
    .button {
        color: black;
    }

.myinput{
        background-color: dimgrey;
        cursor: pointer;
        color: black;
        border: solid 1px blue;
    }

   .myinput:hover {
            background-color: aliceblue;
        }
   .conteneur{
       width:100%;
   }
   .child{
       width:900px;
   }
    
</style>


<button type="button" class="btn btn-primary bg-light button border-1" data-bs-toggle="modal" data-bs-target="#sendModal">
    <i class="fas fa-envelope text-dark"></i>Bana yazın
</button>
<div class="modal conteneur px-3 py-0" id="sendModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered child">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title display-6 text-dark fw-bold text-center"> <i class="fas fa-envelope-open-text me-3"></i>Mesaj Gönderme </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" id="myform" >
                <div class="modal-body ">
                    <label class="form-label text-dark fs-2 my-2"> Adınız</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control bg-secondary-subtle px-2 text-dark fs-2 mt-2 myinput" })
                    <br />
                    <label class="form-label text-dark fs-2 my-1"> Mail Adresi</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control bg-secondary-subtle px-2 text-dark fs-2 mt-2 myinput" })
                    <br />
                    <label class="form-label text-dark fs-2 my-1"> Konu</label>
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control bg-secondary-subtle px-2 text-dark fs-2 mt-2 myinput" })
                    <br />
                    <label class="form-label text-dark fs-2 my-1"> İçerik</label>
                    @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control bg-secondary-subtle px-2 border-1 text-dark fs-2 mt-2 myinput" })

                    <button type="reset" id="resest" class="btn btn-primary" onclick="resetform()" ><i class="fas fa-undo-alt"></i> Boşalt</button>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" id="sendmessage">Gönder</button>
                    <button type="button" data-bs-dismiss="modal" class="btn btn-danger">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function resetform() {
        document.querySelector('.myinput').value = "";
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
